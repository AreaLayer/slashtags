{
  "command": {
    "publish": {
      "message": "chore(release): publish",
      "createRelease": "github",
      "conventionalCommits": true,
      "contents": "dist"
    },
    "run": {
      "stream": true
    },
    "version": {
      "allowBranch": [
        "master",
        "release/*"
      ]
    }
  },
  "ignore-changes": [
    ".github/**",
    "demo/**",
    "*.md",
    "tsconfig.json",
    "*.spec.js"
  ],
  "packages": [
    "packages/*"
  ],
  "version": "independent"
}